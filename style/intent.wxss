.wrapper {
  margin: 10rpx 50rpx;
}
.head {
  border-bottom: 1px solid rgb(82, 82, 82);
}
.title {
  font-size: x-large;
}
.head .banner {
  height: 350rpx;
  width: 100%;
}
.head .banner image {
  width: 100%;
  height: 100%;
}
.head .info {
  font-size: 14px;
  font-weight: 300;
  line-height: 2em;
}
.container {
  margin: 50rpx 0;
  padding: 0;
}

.container .answer {
  display: flex;
  flex-direction: column;
  font-size: 18px;
  font-weight: 300;
  padding: 0;
  line-height: 2em;
}
.container .answer .sub-title {
  font-size: 22px;
  font-weight: 500;
  height: 80rpx;
  line-height: 80rpx;
}
.container .answer text {
  /* text-indent: 2em; */
  margin-bottom: 40rpx;
}