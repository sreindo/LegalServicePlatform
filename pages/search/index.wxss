/* pages/search/index.wxss */
page {
  background-color: rgb(243, 242, 242);
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
}
.search_row input {
  flex: 1;
  height: 100%;
  background-color: #fff;
  padding-left: 25rpx;
  text-align: center;
  
}
.search_row button {
  width: 110rpx;
  height: 100%;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  background-color: #7cb67c;
}

